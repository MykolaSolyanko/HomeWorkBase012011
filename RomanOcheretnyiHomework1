#include <iostream>
#include <cmath>

int main() {
  int16_t a, b, c;
  double dis, x1, x2;
  const int min{1};
  const int max{255};
  std::cout << "enter a in range [2..255]: ";
  std::cin >> a;

  if (a >= min && a <= max) {
    std::cout << "enter b in range [2..255]: ";
    std::cin >> b;
    if (b >= min && b <= max) {
      std::cout << "enter c in range [2..255]: ";
      std::cin >> c;
      if (c >= min && c <= max) {
        std::cout << "discriminant: ";
        dis = b * b - 4 * a * c;
        std::cout << dis << std::endl;
        if (dis >= 0) {
          x1 = ((-b) + sqrt(dis)) / (2 * a);
          x2 = ((-b) - sqrt(dis)) / (2 * a);
          std::cout << "x1 = " << x1 << std::endl;
          std::cout << "x2 = " << x2 << std::endl;
        } else
          std::cout << "discriminant < 0;" << std::endl
                    << "the roots are complex" << std::endl;
      } else {
        std::cout << "error" << std::endl;
      }
    } else {
      std::cout << "error" << std::endl;
    }
  } else {
    std::cout << "error" << std::endl;
  }
  return 0;
}
